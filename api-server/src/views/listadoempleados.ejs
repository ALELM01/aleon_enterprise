<%- include('cabecera_pie/cabecera'); -%>
<!-- Lista -->
<div class="input-group md-form form-sm form-2 pl-0">
    <h4> &nbsp;&nbsp; Buscador: </h4>
    <input class="form-control my-0 py-1 amber-border" type="text" placeholder="Search" id="tableSearch">
</div>
<div class="col-nd-7">
    <table class="table table-bordered table-hover" style="background-color: white">
        <thead>
            <br />
            <tr class="table100-head">
                <th>Nombre</th>
                <th>Apellidos</th>
                <th>DNI</th>
                <th>Puesto</th>
                <th>Codigo Empleado</th>
                <th>Email</th>
                <th>Operaciones</th>
            </tr>
        </thead>
        <tbody id="myTable">
            
            <% for(var i = 0; i < result.length; i++) { %>
                <tr>
              <!-- <%= result[i] %>--> 
               <td><%= result[i].nombre%></td>
               <td><%= result[i].apellidos%></td>
               <td><%= result[i].dni%></td>
               <td><%= result[i].puesto%></td>
               <td><%= result[i].codigoEmpleado%></td>
               <td><%= result[i].email%></td>
               <td><a href="/empresas/visualizarfichajes/<%= result[i].dni%>"><button type="button" class="btn btn-outline-primary">Fichajes</button></a>
                <a href="/empresas/mostrarempleado/<%= result[i]._id%>"><button type="button" class="btn btn-outline-primary">Modificar</button></a>
                <a href="/empresas/deshabilitar/<%= result[i].dni%>"><button type="button" class="btn btn-outline-danger">Deshabilitar</button></a></td>
            </tr> 
            <% } %>
       
                
    </tbody>
    </table>
  <!--  <%= result %> -->
</div>
</div>
<style>
.input-group.md-form.form-sm.form-2 input.amber-border {
    border: 1px solid #ffca28;
    margin: 35px 600px 50px 80px;
}
</style>
<script>
// Filter table

$(document).ready(function () {
    $("#tableSearch").on("keyup", function () {
        var value = $(this).val().toLowerCase();
        $("#myTable tr").filter(function () {
            $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
        });
    });
});
</script>
</body>
</html>
